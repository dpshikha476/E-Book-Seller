<h2 class="page-header">Search Book</h2>
<form action="/authors" method="get">

<div class="form-group row">
    <label class="col-sm-2 col-form-label show-book">Name</label>
    <input class="col-sm-4" type="text" name="title" value="<%= searchOptions.title %>">
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label show-book">Published After</label>
    <input class="col-sm-4"  type="date" name="publishedAfter" 
    value="<%= searchOptions.publishedAfter %>">
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label show-book">Published Before</label>
    <input class="col-sm-4"  type="date" name="publishedBefore" 
    value="<%= searchOptions.publishedBefore %>">
</div>
<button class="btn btn-info" type="submit">Search</button>
</form>

<div class="row" style="margin-top: 2rem;">
    <% books.forEach( book => { %>
        <div class=" col-lg-2 col-md-6 col-sm-12">
        <div class="card" style="width: 10rem;" >
        <a href="/books/<%= book.id %>">
            <img class="card-img-top" src="<%= book.coverImagePath %>">
          </a>
        </div>
    </div>
    <% }) %>
</div>
