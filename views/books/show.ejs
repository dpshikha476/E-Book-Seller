<h2 class="page-header"><%= book.title %></h2>

<div class="card mb-3" style="max-width: 540px;">
<div class="row no-gutters">
<div class="col-md-4">
<img class="card-img" src="<%= book.coverImagePath %>" >
</div>
<div class="col-md-8">
<div class="card-body">

<div class="card-title show-book">
    <div class="row">
        <div class="col-md-4">
            <span>Author: </span> 
        </div>
        <div class="col-md-8 float-left">
            <%= book.author.name %>
        </div>
    </div>
</div>

<div class="card-title show-book">
    <div class="row">
        <div class="col-md-4">
            <span>Publish Date: </span> 
        </div>
        <div class="col-md-8 float-left">
            <%= book.publishDate.toDateString() %>
        </div>
    </div>
</div>

<div class="card-title show-book">
    <div class="row">
        <div class="col-md-4">
            <span>Page Count: </span> 
        </div>
        <div class="col-md-8 float-left">
            <%= book.pageCount %>
        </div>
    </div>
</div>

<div class="card-title show-book">
    <div class="row">
        <div class="col-md-4">
            <span>Description:</span> 
        </div>
        <div class="col-md-8 float-left">
            <%=book.description %>
        </div>
    </div>
</div>

</div>
</div>
</div>
</div>

<div class="buttons">
<a class="btn btn-warning" href="/books/ <%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url:`/books/${book.id}` }) %>
<a class="btn btn-outline-dark" href="/authors/<%= book.author.id %>">View Author</a>
</div>

